<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etDialogAmount"
        android:layout_width="match_parent"
        android:numeric="decimal"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="20">

        <Button
            android:id="@+id/btnDialog_bottle_amount_ok"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Bottle_Dialog_amount_ok" />

        <Button
            android:id="@+id/btnDialog_bottle_amount_cancel"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Bottle_Dialog_amount_cancel" />
    </LinearLayout>


</LinearLayout>