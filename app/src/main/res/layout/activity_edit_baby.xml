<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/txtTitleBabyEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/txtTitleBabyEdit"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivBabyPicture_BabyEdit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/select_picture_icon_128" />

    <EditText
        android:id="@+id/edtBabyName_BabyEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_form_rounded"
        android:hint="Name" >
    </EditText>


    <LinearLayout
        android:id="@+id/gender_layout_EditBABY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="90"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/gender_text_EditBaby"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/gender"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/gender_spinner_EditBaby"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDate_BabyEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_rounded"
        android:drawableLeft="@drawable/icon_date"
        android:text="Button Date"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnTime_BabyEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_button_rounded"
        android:drawableLeft="@drawable/icon_time"
        android:text="Button Time"
        android:textColor="@color/white" />
    <Button
        android:id="@+id/btnTheme_BabyEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button_rounded"
        android:drawableLeft="@drawable/icon_time"
        android:text="@string/selecttheme"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="90" >

        <Button
            android:id="@+id/btnCancel_BabyEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/bg_button_rounded"
            android:drawableLeft="@drawable/icon_cancel"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnDelete_BabyEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="20"
            android:background="@drawable/bg_button_rounded"
            android:drawableLeft="@drawable/icon_delete"
            android:text="@string/delete"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnOk_BabyEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@drawable/bg_button_rounded"
            android:drawableLeft="@drawable/icon_ok"
            android:text="@string/ok"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>